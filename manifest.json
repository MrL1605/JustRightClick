{
  "manifest_version": 2,
  "name": "Just Right Click",
  "short_name": "JustRightClick",
  "description": "Adds menus to right click for easier searches.",
  "version": "1.1.3",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/rc_icon_16x16.png",
    "48": "assets/rc_icon_48x48.png",
    "128": "assets/rc_icon_128x128.png"
  },
  
  "background": {
      "scripts": ["js/background.js"]
  },

  
  "options_ui": {
      "page": "html/options.html",
      "chrome_style": false,
      "open_in_tab": true
    },


  
  "permissions": [
          "contextMenus",
          "storage",
          "tabs",
          "http://*/*",
          "https://*/*"
  ]
}
